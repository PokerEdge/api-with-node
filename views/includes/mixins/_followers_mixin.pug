mixin createFollower(followerObject = {})
  li
    .circle--fluid
      .circle--fluid--cell.circle--fluid--primary
        a.app--tweet--author
          .app--avatar(style=`background-image: url(${followerObject.friendAvatar})`)
            img(src=`${followerObject.friendAvatar}`)
          h4 #{followerObject.friendName}
          p @#{followerObject.friendScreenName}
      .circle--fluid--cell
        //- LOGIC IS NOT NECESSARY NOW, BUT WILL BE VALUABLE WITH APPLICATION EXPANSION
        if followerObject.isFriendFollowed
          a.button.button-text Unfollow
        else if followerObject.isFriendFollowed
          a.button Follow

each follower in followersData
  +createFollower(follower)
